{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "server/**/*.ts",
    "server/**/*.d.ts",
    "worker/**/*.ts",
    "db/**/*.ts",
    "shared/**/*.ts",
    "tests/**/*.ts"
  ]
}